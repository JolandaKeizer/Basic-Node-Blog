		section#portfolio
			.container
				.row
					.col-lg-12.text-center
						p
						h2 join some coffee dates #{firstname}

				.row
				section#messages
					each bla in messages
						.col-sm-4.portfolio-item.message-item
							h3=bla.date
							h4=bla.city
							h4=bla.user.firstname 
							p Favourite coffee:
							p=bla.coffee
							p=bla.title
							p=bla.body

							each comment in bla.comments
								.comment
								p #{firstname}: #{comment.body}
							form(method='POST' action='/comment')
								.form-group.message-item
									// Message input !
									input#email_id.form-control(type='hidden', name='message_id', value=bla.id)
									label.control-label( for='message_id') Comment #{firstname}
									textarea#message_id.form-control(name='comment',  rows='3')
								.form-group.message-item
									.col-sm-6.portfolio-item
									// Submit button !
									button.btn.btn-primary(name='submit', type='submit') Submit

							



